generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Note {
  id           String    @id @default(cuid())
  ownerId      String
  projectId    String?
  parentId     String?
  title        String?
  bodyMarkdown String?   @db.Text
  bodyHtml     String?   @db.Text
  task         Task?     @relation("NoteToTask") // NoteとTaskは1対1、relation名を明示
  archivedAt   DateTime?
  deletedAt    DateTime? // Noteはソフト削除
  metadata     Json?
  sortIndex    Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  owner       User         @relation(fields: [ownerId], references: [id])
  project     Project?     @relation(fields: [projectId], references: [id])
  // 親ノート削除時に子ノートのparentIdをNULLにする (SetNull方針)
  // アプリケーション層で削除確認ロジックを実装する
  parent      Note?        @relation("NoteChildren", fields: [parentId], references: [id], onDelete: SetNull)
  children    Note[]       @relation("NoteChildren")
  tags        NoteTag[]
  attachments Attachment[]

  @@index([ownerId, archivedAt])
  @@index([projectId])
}

model Project {
  id          String    @id @default(cuid())
  ownerId     String
  name        String
  description String?
  emoji       String?
  sortIndex   Int       @default(0)
  archivedAt  DateTime?
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  owner User   @relation(fields: [ownerId], references: [id])
  notes Note[]

  @@unique([ownerId, name])
}

// Tagモデル（独立したエンティティとして、システムタグとユーザータグを表現）
// SYSTEMタグのname/colorの一意性はアプリケーション層で保証する
model Tag {
  id          String    @id @default(cuid())
  scope       TagScope  @default(USER) // SYSTEM または USER
  ownerId     String?   // USERタグの場合にUser.idを参照。SYSTEMタグの場合はnull
  name        String
  description String?
  color       String
  isPreset    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  // deletedAtは追加しない（タグは独立して管理され、ソフト削除の運用は別途検討）

  // ownerIdが設定されている場合のみ、Userモデルとのリレーションを確立
  owner User? @relation(fields: [ownerId], references: [id])
  notes NoteTag[]

  // タグの名前と色の一意性に関する制約
  // ownerIdがnullの場合 (SYSTEMタグ) は、scopeとname/colorで一意となるよう
  // アプリケーション層でのバリデーションを徹底する。
  // ownerIdが非nullの場合 (USERタグ) は、ownerId内でname/colorが一意となる。
  @@unique([scope, name, ownerId])
  @@unique([scope, color, ownerId])
}

enum TagScope {
  SYSTEM // 全ユーザー共通のタグ
  USER   // ユーザー固有のタグ
}

// NoteTagモデル（連携エンティティとして複合主キー化）
model NoteTag {
  noteId    String
  tagId     String
  createdAt DateTime @default(now())

  note Note @relation(fields: [noteId], references: [id])
  tag  Tag  @relation(fields: [tagId], references: [id])

  @@id([noteId, tagId]) // noteIdとtagIdの複合主キー
  @@index([tagId])
}

model Attachment {
  id          String         @id @default(cuid())
  ownerId     String
  noteId      String
  position    Int
  url         String
  storagePath String?
  name        String?
  size        Int?
  mimeType    String?
  kind        AttachmentKind
  metadata    Json?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  // deletedAtは追加しない（関連するNoteの物理削除時、またはアプリでの明示的削除）

  owner User @relation(fields: [ownerId], references: [id])
  note  Note @relation(fields: [noteId], references: [id])

  @@unique([noteId, position])
  @@index([ownerId])
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notes       Note[]
  projects    Project[]
  tags        Tag[] // Userが作成したTagへのリレーション
  attachments Attachment[]
  credentials Credential[]
  linkCodes   LinkCode[]
}

// パスキー（WebAuthn Credential）を保存
model Credential {
  id              String    @id @default(cuid())
  userId          String
  credentialId    Bytes     @unique // WebAuthn credential ID
  publicKey       Bytes              // 公開鍵
  counter         BigInt             // 署名カウンター（リプレイ攻撃防止）
  deviceType      String?            // "singleDevice" | "multiDevice"
  backedUp        Boolean   @default(false)
  transports      String[]           // ["internal", "hybrid", etc.]
  createdAt       DateTime  @default(now())
  lastUsedAt      DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// デバイス追加用リンクコード
model LinkCode {
  id        String    @id @default(cuid())
  userId    String
  code      String    @unique // 6桁コード
  expiresAt DateTime            // 有効期限（5分）
  usedAt    DateTime?           // 使用済みフラグ
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([code])
  @@index([userId])
}

// Task model: Noteのサブタイプ。タスク固有のフィールドをここに格納する。
// 1ユーザーあたり100タスク以下であればownerId不要と判断し、削除。
// deletedAtも削除（Noteの物理削除時、またはアプリでの明示的削除）
model Task {
  id          String    @id @default(cuid())
  noteId      String    @unique
  dueAt       DateTime?
  priority    Int?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Note削除時にTaskも連鎖的に削除（アプリケーションの削除確認ロジックで制御）
  note Note @relation("NoteToTask", fields: [noteId], references: [id], onDelete: Cascade)

  @@index([dueAt])
  @@index([completedAt])
}

enum AttachmentKind {
  IMAGE
  FILE
  LINK
}